<div class="container">
  <h3>Edit/Create Person Template</h3>

  <form {{action "save" on="submit"}}>
    <div class="form-group">
      <label for="name">Name</label><br>
      {{view Ember.TextField valueBinding="name" id="name" classNames="form-control" autofocus="autofocus"}}
    </div>
    <div class="form-group">
      <label for="age">Age</label>
      {{view Ember.TextField valueBinding="age" id="age" classNames="form-control"}}
    </div>
    <button class="btn btn-default" type="submit">Save</button>
    <button {{action "cancel"}} class="btn btn-default">Cancel</button>
  </form>
</div>
